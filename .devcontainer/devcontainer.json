// For format details, see https://aka.ms/vscode-remote/devcontainer.json or this file's README at:
// https://github.com/microsoft/vscode-dev-containers/tree/v0.137.0/containers/go
{
	"name": "get-started-go",
	"build": {
		"dockerfile": "../Dockerfile",
	},
	"runArgs": ["-e", "MONGODB_URI=mongodb://docker.host.internal:27017" ],
	"settings": { 
		"terminal.integrated.shell.linux": "/bin/bash",
		"go.useGoProxyToCheckForToolUpdates": false,
		"go.gopath": "/workspaces/get-started-go/",
		"go.useLanguageServer": true
	},
	"extensions": [
		"golang.Go"
	],
	"remoteUser": "ubuntu",
	"postCreateCommand": "cp -v /home/ubuntu/go/go.mod /workspaces/get-started-go/go/go.mod",
}